<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="97dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/payment_recyclerview_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:textSize="18dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/payment_recyclerview_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:textSize="18dp"
            android:layout_marginEnd="0dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/payment_recyclerview_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="0dp"
        android:text="Card Number:"
        android:textSize="16dp" />

    <Button
        android:id="@+id/payment_recyclerview_select_card"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="10dp"
        android:text="Select Card" />

</LinearLayout>

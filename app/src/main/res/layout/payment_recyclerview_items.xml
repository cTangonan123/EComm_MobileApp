<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_recyclerview"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/payment_recyclerview_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card First Name"
            android:textSize="18sp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/payment_recyclerview_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Last Name"
            android:textSize="18sp"
            android:layout_marginEnd="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="5dp"
        android:gravity="end">

    <TextView
        android:id="@+id/payment_recyclerview_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="textEnd"
        android:gravity="start"
        android:text="Card Number"
        android:textSize="16sp" />

    <Button
        android:id="@+id/payment_recyclerview_select_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginStart="50dp"
        android:text="@string/select_card" />

    </LinearLayout>

</LinearLayout>

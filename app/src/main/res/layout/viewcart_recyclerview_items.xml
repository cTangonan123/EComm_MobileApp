<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/viewcart_recyclerview_product_img"
        android:layout_margin="6dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewcart_recyclerview_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of item"
            android:textSize="20dp"
            android:layout_marginEnd="0dp"
            />

        <TextView
            android:id="@+id/viewcart_recyclerview_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price of Item"
            android:textSize="16dp"
            android:layout_marginEnd="0dp"
            />
        <TextView
            android:id="@+id/viewcart_recyclerview_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty:"
            android:textSize="16dp"
            android:layout_marginEnd="0dp" />

    </LinearLayout>

    <Button
        android:id="@+id/viewcart_recyclerview_product_btn_remove"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Remove Item"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"

        />


</LinearLayout>